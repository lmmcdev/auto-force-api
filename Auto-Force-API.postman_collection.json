  "item": [
    {
      "name": "Vendors",
      "item": [
        {
          "name": "Get All Vendors",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/v1/vendors",
              "host": ["{{baseUrl}}"],
              "path": ["v1", "vendors"]
            },
            "description": "Obtiene todos los vendors (requiere autenticación)"
          },
          "response": []
        },
        {
          "name": "Get Vendor by ID",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/v1/vendors/:id",
              "host": ["{{baseUrl}}"],
              "path": ["v1", "vendors", ":id"],
              "variable": [
                {
                  "key": "id",
                  "value": "",
                  "description": "ID del vendor"
                }
              ]
            },
            "description": "Obtiene un vendor por ID"
          },
          "response": []
        },
        {
          "name": "Create Vendor",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Test Vendor\",\n  \"code\": \"VEN001\",\n  \"type\": \"Supplier\",\n  \"status\": \"Active\",\n  \"contactInfo\": {\n    \"email\": \"vendor@example.com\",\n    \"phone\": \"+1234567890\"\n  }\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/v1/vendors",
              "host": ["{{baseUrl}}"],
              "path": ["v1", "vendors"]
            },
            "description": "Crea un nuevo vendor"
          },
          "response": []
        },
        {
          "name": "Update Vendor",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Updated Vendor Name\",\n  \"status\": \"Inactive\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/v1/vendors/:id",
              "host": ["{{baseUrl}}"],
              "path": ["v1", "vendors", ":id"],
              "variable": [
                {
                  "key": "id",
                  "value": "",
                  "description": "ID del vendor"
                }
              ]
            },
            "description": "Actualiza un vendor existente"
          },
          "response": []
        },
        {
          "name": "Delete Vendor",
          "request": {
            "method": "DELETE",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/v1/vendors/:id",
              "host": ["{{baseUrl}}"],
              "path": ["v1", "vendors", ":id"],
              "variable": [
                {
                  "key": "id",
                  "value": "",
                  "description": "ID del vendor"
                }
              ]
            },
            "description": "Elimina un vendor"
          },
          "response": []
        },
        {
          "name": "Get Vendors by Status",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/v1/vendors/by-status/:status",
              "host": ["{{baseUrl}}"],
              "path": ["v1", "vendors", "by-status", ":status"],
              "variable": [
                {
                  "key": "status",
                  "value": "Active",
                  "description": "Active o Inactive"
                }
              ]
            },
            "description": "Obtiene vendors por status"
          },
          "response": []
        },
        {
          "name": "Import Vendors",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "[\n  {\n    \"name\": \"Vendor 1\",\n    \"code\": \"V001\",\n    \"type\": \"Supplier\",\n    \"status\": \"Active\"\n  },\n  {\n    \"name\": \"Vendor 2\",\n    \"code\": \"V002\",\n    \"type\": \"Manufacturer\",\n    \"status\": \"Active\"\n  }\n]"
            },
            "url": {
              "raw": "{{baseUrl}}/v1/vendors/import",
              "host": ["{{baseUrl}}"],
              "path": ["v1", "vendors", "import"]
            },
            "description": "Importa múltiples vendors"
          },
          "response": []
        }
      ]
    },
    {
